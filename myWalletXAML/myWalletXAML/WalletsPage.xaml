<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myWalletXAML.WalletsPage"
             Title="myWallets">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="walletsStack">
                <Label Text="Wallets go here" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                <Entry x:Name="entryWalletName" TextChanged="OnEntryWalletNameTextChanged" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand"/>
                <Button x:Name="btnNewWallet" Text="New Wallet" Clicked="onNewWalletButtonClicked" VerticalOptions="CenterAndExpand" IsEnabled="False"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>